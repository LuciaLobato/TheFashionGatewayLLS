<?xml version="1.0" encoding="utf-8"?>
<!-- rounded_shadow_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#FFFFFF"/> <!-- Color de fondo blanco o transparente -->
    <corners android:radius="8dp"/> <!-- Radio de las esquinas -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/> <!-- Espacio para la sombra -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD"/> <!-- Color del borde -->
</shape>